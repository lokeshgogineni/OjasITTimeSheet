    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Expense</h2>

<div>
    <table border="1" class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <tr>
            <th colspan="4">Expense Details</th>
        </tr>
        <tr>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Project</label>
                    
                    <select class="form-control">
                        <option>Project1</option>
                        <option>Project2</option>
                        <option>Project3</option>
                        <option>Project4</option>
                    </select>
                        
                    

                </div>


            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Purpose Reason</label>
                    <input type="text" class="form-control" id="txtMobile">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Expense From Date</label>
                    <input type="date" class="form-control" id="txtBDate">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Expense To Date</label>
                    <input type="date" class="form-control" id="txtDoj">
                </div>

            </td>

        </tr>
        
