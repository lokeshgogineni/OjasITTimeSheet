    <table border="1" class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <tr>
            <th colspan="4">Type Of Expense</th>
        </tr>
        <tr>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Hotel</label>
                    <input type="text" class="form-control" id="txtName">
                </div>


            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Meals</label>
                    <input type="text" class="form-control" id="txtMobile">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Landline Bills</label>
                    <input type="text" class="form-control" id="txtEmailId">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Mobile Bills</label>
                    <input type="text" class="form-control" id="txtEmailId">
                </div>

            </td>
        </tr>
        <tr>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Transport EXpense</label>
                    <input type="text" class="form-control" id="txtName">
                </div>


            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Travel</label>
                    <input type="text" class="form-control" id="txtMobile">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Miscellaneous Expense</label>
                    <input type="text" class="form-control" id="txtEmailId">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Total Amount</label>
                    <input type="text" class="form-control" id="txtEmailId">
                </div>

            </td>
        </tr>
        <tr>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Expense ID/Voucher ID</label>
                    <input type="text" class="form-control" id="txtName">
                </div>


            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Zip Attachments</label>
                    <input type="file" class="form-control" id="txtMobile">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Single Attachment</label>
                    <input type="file" class="form-control" id="txtEmailId">
                </div>

            </td>
            <td class="center">
                <div class="form-group has-success">
                    
                </div>

            </td>
        </tr>
