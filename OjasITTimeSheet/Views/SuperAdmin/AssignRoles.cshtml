
@{
    ViewData["Title"] = "AssignRoles";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2>AssignRoles</h2>

<div>
    <table border="1" class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <tr>
            <th colspan="3">AssignRoles</th>
        </tr>
        
        <tr>
            <td class="center">
                <div class="form-group has-success">
                    <div class="control-group">
                        <label class="control-label" for="selectError2">Choose Admin</label>

                        <div class="controls">
                            <select data-placeholder="Your Favorite Football Team" id="selectError2" data-rel="chosen">
                                <option value=""></option>
                              
                                    <option>Dallas Cowboys</option>
                                    <option>New York Giants</option>
                                    <option>Philadelphia Eagles</option>
                                    <option>Washington Redskins</option>
                              
                              
                            </select>
                        </div>

                    </div>
                    </div>
                </td>
            
        </tr>
    </table>
</div>
<div>
    <table border="1" class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <tr>
            <th>Choose Users To Assign Users</th>
        </tr>

        <tr>
           
            <td class="center">
                <table border="1">
                    <tbody>
                        <tr>
                            <td id="tblChkbox"></td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td class="center">

                <a class="btn btn-success" href="#" onclick="fn()">
                    <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                    Assign Role
                </a>
                <a class="btn btn-danger" href="#">
                    <i class="glyphicon glyphicon-trash icon-white"></i>
                    Cancle
                </a>
            </td>
           
            
        </tr>
    </table>
</div>
<script>
    $(document).ready(function () {
        for (var i = 1; i <= 30; i++) {
            var x = document.createElement("INPUT");
            x.setAttribute("type", "checkbox");

            document.getElementById('tblChkbox').appendChild(x);

            var label = document.createElement('label');
            label.innerHTML = "item " + i;
            
            document.getElementById('tblChkbox').appendChild(label);
            
        }

    })
</script>