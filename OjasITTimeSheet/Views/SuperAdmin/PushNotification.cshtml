
@{
    ViewData["Title"] = "PushNotification";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2>PushNotification</h2>

<div>
    <table border="1" class="table table-striped table-bordered bootstrap-datatable datatable" style="width:450px">
        <tr>
            <th colspan="3">Add Notification</th>
        </tr>
        <tr>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">Message</label>
                    <input type="text" class="form-control" id="txtMessage" style="height:150px;width:250px">
                </div>
            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">From Date</label>
                    <input type="date" class="form-control" id="FromDate">
                </div>
            </td>
            <td class="center">
                <div class="form-group has-success">
                    <label class="control-label" for="inputSuccess1">To Date</label>
                    <input type="date" class="form-control" id="ToDate">
                </div>
            </td>
        </tr>

        <tr>
            <td class="center" colspan="3">

                <a class="btn btn-success" href="#" onclick="fn()">
                    <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                    Save Details
                </a>
                <a class="btn btn-danger" href="#">
                    <i class="glyphicon glyphicon-trash icon-white"></i>
                    Cancle
                </a>
                <a class="btn btn-info" href="#">
                    <i class="glyphicon glyphicon-edit icon-white"></i>
                    All Notification
                </a>
            </td>

        </tr>

    </table>
</div>